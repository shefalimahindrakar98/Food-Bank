<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/Card"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:elevation="10dp"
        app:cardBackgroundColor="#FFFAFA"
        >
        <TextView
            android:id="@+id/CATNOLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:text="CATNO :"
            android:textColor="#800080"
            />

        <TextView
            android:id="@+id/CATNOText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="80dp"
            android:text=""
            android:background="@drawable/textshape"
            />

        <TextView
            android:id="@+id/BinLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="50dp"
            android:text="BIN NO :"
            android:textColor="#800080"
            />

        <TextView
            android:id="@+id/BinText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="80dp"
            android:text=""
            android:background="@drawable/textshape"
            />

        <TextView
            android:id="@+id/StationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="100dp"
            android:text="Station NO :"
            android:textColor="#800080"
            />

        <TextView
            android:id="@+id/StationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="100dp"
            android:text=""
            android:background="@drawable/textshape"
            />

        <TextView
            android:id="@+id/LocationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="150dp"
            android:text="Location :"
            android:textColor="#800080"
            />

        <TextView
            android:id="@+id/LocationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="80dp"
            android:text=""
            android:background="@drawable/textshape"
            />

    </androidx.cardview.widget.CardView>
</LinearLayout>



